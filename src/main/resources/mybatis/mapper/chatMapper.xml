<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.test.Chat">
	<select id="selectAll" parameterType="string" resultType="chat">
		select * from chat
		where roomName = #{roomName}
	</select>
	
	<!--  안 씀
	<select id="selectRoom" parameterType="string" resultType="chat">
		select distinct roomName from chat
		where roomName = #{roomName}
	</select>
 -->
 
	
	<update id="updateRead" parameterType="chat">
		update chat set isRead = 1
		where id != #{id} and roomName=#{roomName} and isRead = 0
	</update>	
 
 
	<insert id="insert" parameterType="chat">
		insert into chat(roomName,id,nickname,content,makedate)
		values(#{roomName}, #{id},
		#{nickname}, #{content}, #{makedate})
	</insert>

	<delete id="delete" parameterType="string">
		delete from chat
		where
		roomName=#{roomName}
	</delete>

</mapper>