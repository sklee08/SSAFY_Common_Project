<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.test.Chat">
	<select id="selectAll" parameterType="int" resultType="chat">
		select * from chat
		where pid = #{pid}
	</select>

	<insert id="insert" parameterType="chat">
		insert into chat(pid,id,nickname,content,makedate)
		values(#{pid}, #{id},
		#{nickname}, #{content}, #{makedate})
	</insert>

	<delete id="delete" parameterType="int">
		delete from chat
		where
		pid=#{pid}
	</delete>

</mapper>