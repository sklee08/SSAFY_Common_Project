<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.test.Comments">
	<select id="selectAll" resultType="comments">
		select *
		from comments
	</select>

	<select id="select" parameterType="int" resultType="comments">
		select *
		from comments
		where cno =#{cno}
	

	</select>

	<insert id="insert" parameterType="comments">
		insert into comments(cwriter,ccontent,bno,isSelected,makeday,makeid)
		values(#{cwriter}, #{ccontent},
		#{bno}, #{isSelected}, #{makeday},
		#{makeid})
	</insert>

	<delete id="delete" parameterType="int">
		delete from comments where
		cno=#{cno}
	</delete>

	<update id="update" parameterType="comments">
		update comments set
		ccontent =#{ccontent }, isSelected =#{isSelected },
		changeday =#{changeday }, changeid =#{changeid }
		where cno=#{cno}
	</update>
	
	
	<update id="pick" parameterType="comments">
		update comments set
		isSelected = 1
		where cno=#{cno}
	</update>
</mapper>